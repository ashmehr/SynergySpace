


<body class="non-home">
  <div class="container">
  <div class="jumbotron">
<% if logged_in? %>
<p id="notice"><%= notice %></p>
<h1><%= @post.title %></h1>

<p>
  <strong>Address:</strong>
  <%= @post.address %>
</p>

<p>
  <strong>Owner</strong>
  <%@owner = User.find(@post.madeby) %>
  <%= link_to "#{@owner.name}", @owner %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>City:</strong>
  <%= @post.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @post.country %>
</p>

<p>
  <strong>Size:</strong>
  <%= @post.size %>
</p>

<p>
  <strong>Likes:</strong>
  <%= @post.get_likes.size %>
  <%= link_to "Like", like_post_path(@post), method: :put %>
</p>

<p>
  <strong>Dislikes:</strong>
  <%= @post.get_dislikes.size %>
  <%= link_to "Dislike", dislike_post_path(@post), method: :put %>
</p>

    <input type="button" value="Join" onclick="join_workspace('<%= @post.id %>')">
    <input type="button" value="Leave" onclick="leave_workspace('<%= @post.id %>')">
    <% if @post.madeby == current_user.id or current_user.admin%>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
<%= link_to 'Back', posts_path %>
<br/>
     <div class="container">

    <strong>Users in this workspace</strong>
      <%@users = User.all%>
       <ul class="users">
    <%@users.each do |user| %>
 


  <% if user.post_id == @post.id %>
<li>
  <strong>
    <%= link_to user.name, user %>
 
    <% end %>
    </strong>
</li>
   <% end %>
     
            </ul>
          	</div> 
            <% else %>
            <p> Not available unless you log in </p>
      	</div>
</div>


</body>
<% end %>
  
