

<body class="non-home">
  <div class="container">
  <div class="jumbotron">

<p id="notice"><%= notice %></p>
<h1><%= @post.title %></h1>

<p>
  <strong>Address:</strong>
  <%= @post.address %>
</p>

<p>
  <strong>Owner</strong>
  <%@owner = User.find(@post.madeby) %>
  <%= link_to "#{@owner.name}", @owner %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>City:</strong>
  <%= @post.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @post.country %>
</p>

<p>
  <strong>Size:</strong>
  <%= @post.size %>
</p>
Average Rating: <%= rating_for @post, "rating" %>
    
Score <%= @post.average("rating").nil? ? '0' : @post.average("rating").avg %>
    <%= link_to 'Join', join_post_path(@post) %> | 
    <%= link_to 'Leave', leave_post_path(@post) %> | 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<br/>
     <div class="container">

    <strong>Users in this workspace</strong>
      <%@users = User.all%>
       <ul class="users">
    <%@users.each do |user| %>
 


  <% if user.post_id == @post.id %>
<li>
  <strong>
    <%= link_to user.name, user %>
 
    <% end %>
    </strong>
</li>
   <% end %>
     
            </ul>
          	</div> 

      	</div>
</div>


</body>